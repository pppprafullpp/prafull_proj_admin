<div class="loginColumns animated fadeInDown" style="padding-top:4%;">
	<div class="row">
		<%= render :partial => 'shared/login_left_panel' %>

		<div class="col-md-6">
			<div class="ibox-content">
				 <div><h3>Service Deals Administrator Login</h3> </div>
    <div class="hr-line-dashed"></div>
				<%= form_tag login_admin_admins_path do %>
				<div class="form-group">
					<input type="email" class="form-control" placeholder="Email" required="true" name="email">
				</div>
				<div class="form-group">
					<input type="password" class="form-control" placeholder="Password" name="password" required="true">
				</div>
				<button type="submit" class="btn btn-primary block full-width m-b">
					Login
				</button>

				<a href="#" onclick="alert('Under implementation!')"> <small>Forgot password?</small> </a>
				
				<p class="text-muted text-center"></p>

				<% end %>
			</div>
		</div>
	</div>
	<hr />


</div>
