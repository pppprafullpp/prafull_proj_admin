<div class="loginColumns animated fadeInDown" style="padding-top:4%;padding-bottom:0%;">
  <%= render :partial => 'shared/dpl_notifier' %>
  <div class="row">
  	
  	<%= render :partial => 'shared/login_left_panel' %>
	
    <div class="col-md-6">
      <div class="ibox-content">
      	<div><h3>Reset Password</h3> </div>
      	
    <div class="hr-line-dashed"></div>
        <%= form_tag reset_password_user_user_path(params[:id]) do %>
            
            <div class="form-group">
              <input type="password" class="form-control" placeholder="Password" name="password" required="true">
            </div>
            
            <div class="form-group">
              <input type="password" class="form-control" placeholder="Confirm Password" name="confirm_password" required="true">
            </div>
            
            <button type="submit" class="btn btn-w-m btn-success block full-width m-b">
               Reset Password
            </button>
		<% end %>
        <p class="m-t"></p>
      </div>
    </div>
  </div>
  <hr />
</div>