<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>User</h2>
    <%= render :partial => "shared/breadcrumb", :locals => {:breadcrumb => @breadcrumb}%>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-content">
          <%= render :partial => "shared/dpl_notifier"%>
          <% if @users.present? %>
              <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                <thead>
                <tr>

                  <th data-toggle="true">Name</th>
                  <th data-hide="all">Age</th>
                  <th data-hide="phone">Mobile</th>
                  <th data-hide="phone">Email</th>
                  <th data-hide="phone">Created At</th>
                  <th class="text-right" data-sort-ignore="true">Action</th>

                </tr>
                </thead>
                <tbody>
                <% @users.each do |user| %>
                    <tr>
                      <td>
                        <%= link_to "#{user.prefix} #{user.first_name} #{user.last_name}",edit_user_user_path(user) %>
                      </td>
                      <td>
                        <%= user.age %> Years
                      </td>
                      <td>
                        <%= user.mobile %>
                      </td>
                      <td>
                        <%= user.email %>
                      </td>
                      <td>
                        <%= user.created_at.strftime('%d-%m-%Y %H:%M:%S') %>
                      </td>
                      <td class="text-right">
                        <div class="btn-group">
                          <%= link_to 'Edit',edit_user_user_path(user),:class => 'btn-white btn btn-xs' %>
                          <%#= link_to("Destroy",lab_lab_order_path(tc), method: :delete,:class => 'btn-white btn btn-xs') %>
                        </div>
                      </td>
                    </tr>
                <% end %>
                </tbody>
                <tfoot>
                <tr>
                  <td colspan="6">
                    <ul class="pagination pull-right"></ul>
                  </td>
                </tr>
                </tfoot>
              </table>
          <% else %>
              <div class="alert alert-danger" style="text-align: center;"> No User Added Yet</div>
          <% end %>

        </div>
      </div>
    </div>
  </div>


</div>

<% content_for :javascript do %>

    <script type="text/javascript">


        $(function() {

            $('.footable').footable();

        });

    </script>

<% end %>
