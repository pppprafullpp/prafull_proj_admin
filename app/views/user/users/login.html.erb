<div class="loginColumns animated fadeInDown" style="padding-top:4%;padding-bottom:0%;">
  <%= render :partial => 'shared/dpl_notifier' %>
  <div class="row">
  	
  	<%= render :partial => 'shared/login_left_panel' %>
	
    <div class="col-md-6">
      <div class="ibox-content">
      	<div><h3>Member Login</h3> </div>
      	
    <div class="hr-line-dashed"></div>
        <%= form_tag login_user_users_path do %>
            <div class="form-group">
              <input class="form-control" placeholder="Email/Mobile" required="true" name="email">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" placeholder="Password" name="password" required="true">
            </div>
            <input type="hidden" name="referer" value="checkout_login">
            <button type="submit" class="btn btn-w-m btn-success block full-width m-b">
               Login
            </button>
            

            <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", :class => "btn btn-w-m btn-success block full-width m-b" %>


            <a href="<%= forgot_password_user_users_path %>"> <small>Forgot password?</small> </a>

            <p class="text-muted text-center">
              <small>Do not have an account?</small>
            </p>
            <a class="btn btn-sm btn-white btn-block" href="<%= user_register_path %>">Become Service Deals Member</a>
            <a class="btn btn-sm btn-white btn-block" href="<%= login_labs_path %>">Lab Login</a>
			<p class="text-muted text-center"></p>

        <% end %>
        <p class="m-t"></p>
      </div>
    </div>
  </div>
  <hr />
</div>