<div class="loginColumns animated fadeInDown" style="padding-top:4%;padding-bottom:0%;">
  <%= render :partial => 'shared/dpl_notifier' %>
  <div class="row">

    <%= render :partial => 'shared/login_left_panel' %>

    <div class="col-md-6">
      <div class="ibox-content">
        <div><h3>Member Login by Facebook</h3> </div>

        <div class="hr-line-dashed"></div>
        <%= form_tag create_dpl_user_by_fb_user_sessions_path do %>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Enter Name" required="true" name="first_name" value="<%= @user_social_login_detail.name %>" readonly="readonly">
            </div>

            <div class="form-group">
              <input type="email" class="form-control" placeholder="Email" required="true" name="email" value="<%= @email %>" readonly="readonly">
            </div>

            <div class="form-group">
              <input type="number" class="form-control" placeholder="Enter Mobile" required="true" name="mobile">
            </div>

            <input type="hidden" name="fb_image" value="<%= @fb_image %>">
            <input type="hidden" name="social_login_id" value="<%= @user_social_login_detail.id %>">
            <button type="submit" class="btn btn-w-m btn-success block full-width m-b">
              Register Mobile
            </button>

        <% end %>
        <p class="m-t"></p>
      </div>
    </div>
  </div>
  <hr />
</div>