<% feedbacks = Feedback.where(:status => ACTIVE_STATUS).limit(10) %>
<% if feedbacks.present? %>
    <div class="carousel slide" id="fcarousel">
        	<div class="carousel-inner">
    <% feedbacks.each_with_index do |feedback, index| %>
        
        <% user = User.find(feedback.user_id) %>
        <% image_url = user.upload.url(:thumb) if user.upload.present? %>
        <% if image_url.present? %>
            <div class="testimonial item <%= 'active' if index == 0%>">
            	
		              <h2>What they have to say?</h2>
		              <ul>
		                <li><div class="client-pic"><span><%= image_tag image_url %></span></div>
		                  <p><i></i>
		                    <%= feedback.feedback %>
		                  </p>
		                  <span class="client-name"><%= user.first_name + ' ' + user.last_name %></span><br>
		                </li>
		              </ul>
		        </div>      
           
        <% end %>
         <% end %>
         <a data-slide="prev" href="#fcarousel" class="left carousel-control">
            <span class="icon-prev"></span>
         </a>
         <a data-slide="next" href="#fcarousel" class="right carousel-control">
            <span class="icon-next"></span>
         </a>
        </div>
      </div>
   
<% end %>





<script>
  $( document ).ready(function() {
  	$('.carousel').carousel({
        interval: 3000
    });
  });  
 
</script>



