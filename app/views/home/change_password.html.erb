<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Change Password</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= home_index_path %>">Home</a>
      </li>
      <li class="active">
        <strong>Change Password</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
      
  </div>
</div>

<div class="loginColumns animated fadeInDown" style="padding-top:4%;padding-bottom:0%;">
  <%= render :partial => 'shared/dpl_notifier' %>
  <div class="row">

   

    <div class="col-md-12">
      <div class="ibox-content">
        <div><h3>Change Password</h3> </div>

        <div class="hr-line-dashed"></div>
        <%= form_tag update_password_home_index_path do %>
            <div class="form-group">
              <input type="password" class="form-control" placeholder="Old Password" name="old_password" required="true">
            </div>

            <div class="form-group">
              <input type="password" class="form-control" placeholder="New Password" name="new_password" required="true">
            </div>

            <div class="form-group">
              <input type="password" class="form-control" placeholder="Confirm Password" name="confirm_password" required="true">
            </div>

            <button type="submit" class="btn btn-w-m btn-primary block full-width m-b">
              Change Password
            </button>

        <% end %>
        <p class="m-t"></p>
      </div>
    </div>
  </div>
  <hr />
</div>