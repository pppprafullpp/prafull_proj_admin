<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Service Deals | Price Comparator</title>
  
  <!-- Main css styles -->
  <%= stylesheet_link_tag    'application','admin/test_categories', 'admin/clockpicker','admin/daterangepicker','admin/datepicker3', 'data-turbolinks-track' => true %>

  <!-- Main javascript files -->
  <%= javascript_include_tag 'application', 'admin/clockpicker','admin/daterangepicker','admin/datepicker','data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag(source='favicon.ico') %>
  <%= stylesheet_link_tag "home" %>

</head>
<body class="fixed-sidebar">

<!-- Wrapper-->
<div id="wrapper">

  <!-- Navigation -->
  <%= render 'layouts/navigation' %>

  <!-- Page wraper -->
  <div id="page-wrapper" class="gray-bg">

    <!-- Page wrapper -->
    <%#= render 'layouts/topnavbar' %>

    <!-- Main view  -->
    <%= yield %>

    <!-- Footer -->
    <%= render 'layouts/footer' %>

  </div>
  <!-- End page wrapper-->

</div>
<!-- End wrapper-->

<script type="text/javascript">
    $( document ).ready(function() {
        $('.clockpicker').clockpicker();
        
        $(".chosen-select").chosen();
       
        $('.date').datepicker({
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true,
            format: 'dd-mm-yyyy'
        });


    });

    function validateEmail(sEmail) {
        var filter = /^([\w-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
        if (filter.test(sEmail)) {
            return true;
        }
        else {
            return false;
        }
    }
</script>
<%# if Rails.env.production? %>
    <%= render :partial => "layouts/google_analytics" %>
<%# end %>
</body>
</html>
